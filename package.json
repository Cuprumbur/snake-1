{
  "name": "Snake",
  "version": "0.2.1",
  "description": "Desktop Classic Snake Game",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "clean": "rimraf dist",
    "pack32": "electron-packager . snake --platform linux --arch ia32 --out dist/ --ignore \"(dist|node_modules/electron.*)\"",
    "pack64": "electron-packager . snake --platform linux --arch x64 --out dist/ --ignore \"(dist|node_modules/electron.*)\"",
    "deb32": "electron-installer-debian --src dist/snake-linux-ia32/ --dest dist/installers/ --arch i386 --config config.json",
    "deb64": "electron-installer-debian --src dist/snake-linux-x64/ --dest dist/installers/ --arch amd64 --config config.json",
    "build": "npm run clean && npm run pack32 && npm run deb32 && npm run pack64 && npm run deb64"
  },
  "author": "Alperen Co≈ükun <dev@alpcoskun.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/alpcoskun/snake.git"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^1.7.6",
    "electron-installer-debian": "^0.5.2",
    "electron-packager": "^9.0.1",
    "rimraf": "^2.6.2"
  }
}
